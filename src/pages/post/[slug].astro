---
import type { InferGetStaticParamsType } from "astro";
import Layout from "../../layouts/Layout.astro";
import { urlFor } from "../../utils/image";
import { getFolder, getPost, getPosts } from "../../utils/sanity";

export async function getStaticPaths() {
  const posts = await getPosts();
  return posts.map((post) => ({
    params: { slug: post.slug.current },
  }));
}

type Params = InferGetStaticParamsType<typeof getStaticPaths>;
const { slug } = Astro.params as Params;

const post = await getPost(slug);
const folder = post && await getFolder(post.folder._ref)

---
<Layout title={post.title!}>
  <section  class="mt-auto grid grid-cols-4 md:grid-cols-12 px-4 md:px-[30px] md:mt-[30px] gap-4 md:gap-6">
    {
      post.mainImage ? (
        <img
          class="col-span-4 md:col-span-12 mx-auto mt-auto md:mt-unset max-h-[700px]"
          src={urlFor(post.mainImage).url()}
          alt="Cover image"
        />
      ) : (
        <div class="post__cover--none" />
      )
    }
  </section>
  <div class="p-4 md:p-7 flex justify-between"><h2 class="text-[18px] md:text-[32px]">{folder.name}</h2></div>
</Layout>

