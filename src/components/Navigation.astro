---
const currentPath = Astro.url.pathname;
---

<nav class="flex justify-end">
  <ul class="flex gap-2 text-lg md:text-[34px]">
    <li>
      <a
        class={currentPath.includes('/gallery') ? 'line-through' : 'hover:underline'}
        href="/gallery">Index</a
      ><span>,</span>
    </li>
    <li>
      <a
        class={currentPath.includes('/info') ? 'line-through' : 'hover:underline'}
        href="/info">Info</a
      >
    </li>
  </ul>
</nav>
